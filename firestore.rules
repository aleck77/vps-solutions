
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read on published posts
    match /posts/{postId} {
      allow read: if resource.data.published == true;
      allow write: if isAdmin();
    }
    
    // Allow public read on categories
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Allow public read on pages
    match /pages/{pageId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Allow newsletter subscriptions
    match /subscribers/{subscriberId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // Allow public read on navigation menus
    match /navigation/{menuId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Allow public read on VPS plans
    match /vps_plans/{planId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Allow public read on site content (homepage, contact info)
    match /site_content/{contentId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
