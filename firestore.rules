
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default to locked down for safety.
    // Specific collections below will open up permissions.
    match /{document=**} {
      allow read, write: if false;
    }

    // Public blog posts can be read by anyone if they are marked as 'published'.
    match /posts/{postId} {
      allow read: if resource.data.published == true;
      // Writes are handled by admin server actions, which bypass these rules.
    }
    
    // Categories, pages, and navigation menus are public content and can be read by anyone.
    match /categories/{categoryId} {
      allow read: if true;
    }
    match /pages/{pageId} {
      allow read: if true;
    }
    match /navigation/{navId} {
      allow read: if true;
    }

    // Anyone can subscribe to the newsletter, but no one can read the list of subscribers.
    match /subscribers/{subscriberId} {
      allow create: if true;
      allow read, update, delete: if false;
    }
  }
}
