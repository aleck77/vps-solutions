
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Posts collection
    // - Anyone can read published posts
    // - Only admins can create, update, or delete posts
    match /posts/{postId} {
      allow read: if resource.data.published == true || (request.auth != null && request.auth.token.isAdmin == true);
      allow create, update, delete: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // Categories collection
    // - Anyone can read categories
    // - Only admins can write to categories
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.isAdmin == true;
    }

    // Subscribers collection
    // - Anyone can create (subscribe)
    // - Only admins can read or delete subscribers
    match /subscribers/{subscriberId} {
      allow create: if true; // Validate email format if needed: request.resource.data.email.matches('.+@.+[.].+')
      allow read, delete: if request.auth != null && request.auth.token.isAdmin == true;
      allow update: if false; // Generally, subscribers don't update their own record other than unsubscribing (delete)
    }

    // Users collection (if you have one for admin roles)
    // match /users/{userId} {
    //   allow read, write: if request.auth != null && request.auth.uid == userId;
    //   allow read, write: if request.auth != null && request.auth.token.isAdmin == true;
    // }
  }
}
